<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp18">

    <TextView
        android:id="@+id/tv_suggest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/sp24"
        android:singleLine="true"
        android:textSize="@dimen/dp15"
        android:text="how to make button navigation in android"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_arrow_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_suggest"
        app:layout_constraintLeft_toRightOf="@id/tv_suggest"
        app:layout_constraintBottom_toBottomOf="@id/tv_suggest"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp22"
        android:layout_marginRight="@dimen/dp8"
        android:src="@drawable/ic_up_history"/>

</androidx.constraintlayout.widget.ConstraintLayout>