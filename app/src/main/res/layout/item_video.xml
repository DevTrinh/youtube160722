<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp24">

    <ImageView
        android:id="@+id/iv_item_list_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_main_model"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_main_avt_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_list_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginTop="@dimen/dp8"
        android:src="@drawable/iv_main_model"/>

    <TextView
        android:id="@+id/tv_item_main_title_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_main_avt_video"
        app:layout_constraintLeft_toRightOf="@id/iv_item_main_avt_video"
        app:layout_constraintWidth_percent="0.73"
        android:layout_marginStart="@dimen/dp12"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="VÌ MẸ ANH BẮT CHIA TAY | MIU LÊ x KARIK x CHÂU ĐĂNG KHOA | Official MV ĐĂNG KHOA | Official MV"
        android:singleLine = "false"
        android:ellipsize="end"
        android:maxLength="80"
        android:maxWidth="100dp"/>

    <TextView
        android:id="@+id/tv_item_main_name_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_title_video"
        app:layout_constraintVertical_bias="0.2"
        android:text="Linh Nhi Chilssssssssssssssssssssssssssssssssssl"
        android:textColor="@color/color5e"
        android:maxLines="1"
        android:maxLength="24"
        android:maxWidth="@dimen/dp150"
        android:ellipsize="end"
        android:textSize="@dimen/dp13"/>

    <View
        android:id="@+id/view_dots"
        android:layout_width="1.5dp"
        android:layout_height="1.5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_item_main_name_channel"
        app:layout_constraintRight_toLeftOf="@id/tv_item_main_view_count"
        app:layout_constraintTop_toTopOf="@+id/tv_item_main_name_channel"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_main_name_channel"
        android:background="@color/color5e"/>

    <TextView
        android:id="@+id/tv_item_main_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_main_name_channel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="12dp"
        android:text="2.3M views"
        android:textColor="@color/color5e"
        android:textSize="13sp"/>

    <View
        android:id="@+id/v_dots"
        android:layout_width="1.5dp"
        android:layout_height="1.5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_item_main_view_count"
        app:layout_constraintRight_toLeftOf="@id/tv_item_main_time_up"
        app:layout_constraintTop_toTopOf="@+id/tv_item_main_view_count"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_main_view_count"
        android:background="@color/color5e"/>

    <TextView
        android:id="@+id/tv_item_main_time_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title_video"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_main_view_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginStart="12dp"
        android:text="10 months ago"
        android:textColor="@color/color5e"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/iv_item_main_menu_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_item_main_title_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_main_title_video"
        app:layout_constraintLeft_toRightOf="@id/tv_item_main_title_video"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintHeight_percent="0.1"
        android:src="@drawable/ic_menu_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>